{# create.html.twig #}

{% extends 'base.html.twig' %}


{% block container %}
    <div class="col-md-8">

        {% if isValidate == false %}
            <h2 class="my-4">
                Create your Perso
            </h2>

            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form(form) }}

        {% else %}
            <p>Perso has been created</p>

            <a href="/persos"><button type="button" class="btn btn-secondary">See your Persos</button></a>
        {% endif %}
    </div>



{% endblock %}